@model List<Mi_primera_aplicación_web_MVC.Models.Equipo>

@{
    ViewData["Title"] = "Tabla de Posiciones";
}

<h1 class="text-center text-4xl font-bold mb-6">Tabla de Posiciones - LigaPro 2025</h1>

<table class="table-auto w-full border-collapse">
    <thead class="bg-black text-white">
        <tr>
            <th class="p-2">Posición</th>
            <th class="p-2">Nombre Equipo</th>
            <th class="p-2">PartidosJugados</th>
            <th class="p-2">PartidosGanados</th>
            <th class="p-2">PartidosPerdidos</th>
            <th class="p-2">PartidosEmpatados</th>
            <th class="p-2">Puntos</th>
            <th class="p-2">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @{
            int posicion = 1;
        }
        @foreach (var item in Model)
        {
            <tr class="odd:bg-white even:bg-gray-100">
                <td class="text-center font-bold">@posicion</td>
                <td class="flex items-center gap-2 p-2">
                    <img src="~/img/@item.Logo" alt="Logo @item.Nombre" width="30" height="30" style="object-fit:contain;" />
                    @item.Nombre
                </td>
                <td class="text-center">@item.PartidosJugados</td>
                <td class="text-center">@item.PartidosGanados</td>
                <td class="text-center">@item.PartidosPerdidos</td>
                <td class="text-center">@item.PartidosEmpatados</td>
                <td class="text-center font-bold">@item.Puntos</td>
                <td class="text-center">
                    <a asp-controller="Equipo" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Editar</a>|
                    <a asp-controller="Equipo" asp-action="Equipos" asp-route-id="@item.Id" class="btn btn-primary">Detalles Equipo</a>
                </td>
            </tr>
            posicion++;
        }
    </tbody>
</table>
