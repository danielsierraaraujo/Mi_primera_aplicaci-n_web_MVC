@model Mi_primera_aplicación_web_MVC.Models.Equipo

@{
    ViewData["Title"] = "Detalle del Equipo";
}

<div class="container mt-4">
    <div class="card shadow-lg p-4 rounded-4">
        <div class="row align-items-center">
            <div class="col-md-4 text-center">
                <img src="~/img/@Model.Logo" alt="Logo de @Model.Nombre" class="img-thumbnail me-4" style="max-width: 600px;" />
            </div>
            <div class="col-md-8">
                <h2 class="text-primary">@Model.Nombre</h2>
                <p class="lead">Equipo participante en la LigaPro 2025. Actualmente cuenta con @Model.Puntos puntos acumulados en la tabla de posiciones.</p>

                <table class="table table-bordered table-striped mt-4">
                    <tbody>
                        <tr>
                            <th>Partidos Jugados</th>
                            <td>@Model.PartidosJugados</td>
                        </tr>
                        <tr>
                            <th>Ganados</th>
                            <td>@Model.PartidosGanados</td>
                        </tr>
                        <tr>
                            <th>Empatados</th>
                            <td>@Model.PartidosEmpatados</td>
                        </tr>
                        <tr>
                            <th>Perdidos</th>
                            <td>@Model.PartidosPerdidos</td>
                        </tr>
                        <tr>
                            <th>Puntos</th>
                            <td><strong>@Model.Puntos</strong></td>
                        </tr>
                    </tbody>
                </table>

                <a asp-action="ListaEquipos" class="btn btn-secondary mt-3">← Volver a Equipos</a>
            </div>
        </div>
    </div>
</div>
