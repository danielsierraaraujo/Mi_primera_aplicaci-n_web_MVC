@model Equipo

<h2>Editar Equipo</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="PartidosJugados"></label>
        <input asp-for="PartidosJugados" class="form-control" type="number" min="0" />
    </div>

    <div class="form-group">
        <label asp-for="PartidosGanados"></label>
        <input asp-for="PartidosGanados" class="form-control" type="number" min="0" />
    </div>

    <div class="form-group">
        <label asp-for="PartidosEmpatados"></label>
        <input asp-for="PartidosEmpatados" class="form-control" type="number" min="0" />
    </div>

    <div class="form-group">
        <label asp-for="PartidosPerdidos"></label>
        <input asp-for="PartidosPerdidos" class="form-control" type="number" min="0" />
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="ListaEquipos" class="btn btn-secondary">Cancelar</a>
</form>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger mt-3">
        @ViewBag.Error
    </div>
}
